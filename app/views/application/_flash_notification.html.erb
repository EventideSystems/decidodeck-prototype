<%# Single notification for Turbo Stream rendering %>
<div class="<%= notification_classes(type) %> rounded-lg shadow-lg p-4"
     data-controller="notification"
     data-notification-type-value="<%= type %>"
     data-notification-message-value="<%= message %>"
     data-notification-duration-value="<%= duration %>"
     data-notification-dismissible-value="true"
     data-notification-allow-browser-notification-value="<%= should_use_browser_notification?(type) %>">
  
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <%= notification_icon(type) %>
    </div>
    
    <div class="ml-3 flex-1">
      <p class="text-sm font-medium">
        <%= message %>
      </p>
    </div>
    
    <div class="ml-4 flex-shrink-0 flex">
      <button data-action="click->notification#dismiss"
              class="inline-flex text-gray-400 dark:text-gray-300 hover:text-gray-500 dark:hover:text-gray-200 focus:outline-none focus:text-gray-500 dark:focus:text-gray-200 transition-colors duration-200"
              type="button"
              aria-label="Dismiss notification">
        <span class="sr-only">Close</span>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>
</div>
