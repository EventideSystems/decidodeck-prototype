<div class="h-screen bg-gray-50 dark:bg-gray-900">
  <div class="h-full p-6 overflow-y-auto">
    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center">
          <%= link_to [@workspace, @artifact], class: "mr-4 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
              Edit Artifact
            </h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              <%= @artifact.content.class.name.demodulize.humanize %> in <%= @workspace.name %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Form based on content type -->
    <% case @artifact.content %>
    <% when ArtifactContent::Note %>
      <%= render 'edit_form_note' %>
    <% else %>
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">Unsupported Content Type</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            This artifact contains a <%= @artifact.content.class.name.demodulize.humanize.downcase %> which is not yet supported for editing.
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
