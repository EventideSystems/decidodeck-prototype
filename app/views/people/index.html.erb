<div class="h-screen bg-gray-50 flex">
  <!-- Left Panel - People Cards -->
  <div class="flex-1 p-6 overflow-y-auto">
    <div class="mb-6">
      <div class="flex items-center justify-between mb-2">
        <h1 class="text-2xl font-bold text-gray-900">People</h1>
        <div class="flex space-x-3">
          <button class="flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
            Filter
          </button>
          <button class="flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2 2z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5v4m8-4v4"/>
            </svg>
            Sort
          </button>
          <button class="flex items-center px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Add Person
          </button>
        </div>
      </div>
      <p class="text-gray-600">Manage your stakeholders and team members</p>
    </div>
    
    <!-- People Cards Container -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @people.each do |person| %>
        <%= render 'stakeholder_card', person: %>
      <% end %>
      
      <!-- Add Person Card -->
      <div class="bg-white rounded-lg shadow-sm border-2 border-dashed border-gray-300 p-6 hover:border-gray-400 transition-colors duration-200 cursor-pointer">
        <div class="text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Add Person</h3>
          <p class="mt-1 text-sm text-gray-500">Create a new stakeholder</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Right Panel - Actions (static) -->
  <div class="w-80 bg-white border-l border-gray-200 h-full shadow-xl">
    <div class="p-6">
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-900">Actions</h2>
      </div>
        
      <!-- Action Cards -->
      <div class="space-y-4">
        <!-- Add Person Action -->
        <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-medium text-blue-900">Add New Person</h3>
              <p class="text-sm text-blue-700 mt-1">Create an individual stakeholder record</p>
              <button class="mt-2 text-sm font-medium text-blue-600 hover:text-blue-500">
                Create Person →
              </button>
            </div>
          </div>
        </div>
        
        <!-- Add Organization Action -->
        <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-medium text-purple-900">Add Organization</h3>
              <p class="text-sm text-purple-700 mt-1">Create a corporate stakeholder record</p>
              <button class="mt-2 text-sm font-medium text-purple-600 hover:text-purple-500">
                Create Organization →
              </button>
            </div>
          </div>
        </div>
        
        <!-- Invite Team Member Action -->
        <div class="bg-orange-50 rounded-lg p-4 border border-orange-200">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l2 2-2 2"/>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-medium text-orange-900">Invite Team Member</h3>
              <p class="text-sm text-orange-700 mt-1">Send an invitation to join your account</p>
              <button class="mt-2 text-sm font-medium text-orange-600 hover:text-orange-500">
                Send Invite →
              </button>
            </div>
          </div>
        </div>
        
        <!-- Import Action -->
        <div class="bg-green-50 rounded-lg p-4 border border-green-200">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-medium text-green-900">Import Stakeholders</h3>
              <p class="text-sm text-green-700 mt-1">Upload CSV file with stakeholder data</p>
              <button class="mt-2 text-sm font-medium text-green-600 hover:text-green-500">
                Import CSV →
              </button>
            </div>
          </div>
        </div>
        
        <!-- Export Action -->
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-medium text-gray-900">Export Data</h3>
              <p class="text-sm text-gray-700 mt-1">Download stakeholder data as CSV</p>
              <button class="mt-2 text-sm font-medium text-gray-600 hover:text-gray-500">
                Export CSV →
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
