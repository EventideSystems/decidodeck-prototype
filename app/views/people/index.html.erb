<div class="flex h-screen bg-gray-50" data-controller="drawer">
  <!-- Left Panel - People Cards -->
  <div class="flex-1 p-6 overflow-y-auto">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">People</h1>
      <p class="text-gray-600">Manage your stakeholders and team members</p>
    </div>
    
    <!-- People Cards Container -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @people.each do |person| %>
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200">
          <div class="flex items-start justify-between mb-4">
            <div class="flex items-center">
              <div class="h-12 w-12 bg-blue-500 rounded-full flex items-center justify-center text-white font-semibold">
                <%= person.name.split.map(&:first).join.upcase %>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-medium text-gray-900"><%= person.name %></h3>
                <p class="text-sm text-gray-500"><%= person.try(:role) || "Person" %></p>
              </div>
            </div>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Active
            </span>
          </div>
          
          <div class="space-y-2 mb-4">
            <% if person.try(:email).present? %>
              <div class="flex items-center text-sm text-gray-600">
                <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <%= person.email %>
              </div>
            <% end %>
            
            <div class="flex items-center text-sm text-gray-600">
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              Individual
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex space-x-2">
              <% if person.try(:influence_level) %>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-red-100 text-red-800">
                  <%= person.influence_level.humanize %> Influence
                </span>
              <% end %>
              <% if person.try(:interest_level) %>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-yellow-100 text-yellow-800">
                  <%= person.interest_level.humanize %> Interest
                </span>
              <% end %>
            </div>
            <button class="text-gray-400 hover:text-gray-600">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
              </svg>
            </button>
          </div>
        </div>
      <% end %>
      
      <!-- Add Person Card -->
      <div class="bg-white rounded-lg shadow-sm border-2 border-dashed border-gray-300 p-6 hover:border-gray-400 transition-colors duration-200 cursor-pointer">
        <div class="text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">Add Person</h3>
          <p class="mt-1 text-sm text-gray-500">Create a new stakeholder</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Right Panel - Actions Drawer -->
  <div class="relative">
    <!-- Drawer Panel -->
    <div data-drawer-target="panel" 
         class="w-80 bg-white border-l border-gray-200 h-full transform translate-x-64 transition-transform duration-300 ease-in-out shadow-xl">
      <!-- Drawer Toggle Button - positioned on the panel itself -->
      <button data-action="click->drawer#toggle" 
              data-drawer-target="closedToggle"
              class="absolute -left-12 top-6 z-10 bg-white shadow-lg rounded-l-lg border border-r-0 border-gray-200 p-2 hover:bg-gray-50 transition-colors duration-200">
        <svg class="h-5 w-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </button>
      
      <div class="p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-lg font-semibold text-gray-900">Actions</h2>
          <button data-action="click->drawer#toggle" 
                  class="p-1 hover:bg-gray-100 rounded transition-colors duration-200">
            <svg class="h-5 w-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        
        <!-- Action Cards -->
        <div class="space-y-4">
          <!-- Add Person Action -->
          <div class="bg-blue-50 rounded-lg p-4 border border-blue-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <h3 class="text-sm font-medium text-blue-900">Add New Person</h3>
                <p class="text-sm text-blue-700 mt-1">Create an individual stakeholder record</p>
                <button class="mt-2 text-sm font-medium text-blue-600 hover:text-blue-500">
                  Create Person →
                </button>
              </div>
            </div>
          </div>
          
          <!-- Add Organization Action -->
          <div class="bg-purple-50 rounded-lg p-4 border border-purple-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <h3 class="text-sm font-medium text-purple-900">Add Organization</h3>
                <p class="text-sm text-purple-700 mt-1">Create a corporate stakeholder record</p>
                <button class="mt-2 text-sm font-medium text-purple-600 hover:text-purple-500">
                  Create Organization →
                </button>
              </div>
            </div>
          </div>
          
          <!-- Import Action -->
          <div class="bg-green-50 rounded-lg p-4 border border-green-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <h3 class="text-sm font-medium text-green-900">Import Stakeholders</h3>
                <p class="text-sm text-green-700 mt-1">Upload CSV file with stakeholder data</p>
                <button class="mt-2 text-sm font-medium text-green-600 hover:text-green-500">
                  Import CSV →
                </button>
              </div>
            </div>
          </div>
          
          <!-- Export Action -->
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div class="ml-3 flex-1">
                <h3 class="text-sm font-medium text-gray-900">Export Data</h3>
                <p class="text-sm text-gray-700 mt-1">Download stakeholder data as CSV</p>
                <button class="mt-2 text-sm font-medium text-gray-600 hover:text-gray-500">
                  Export CSV →
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
