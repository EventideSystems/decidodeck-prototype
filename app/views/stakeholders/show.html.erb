<div class="max-w-6xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <div class="mb-8">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-4">
        <li>
          <%= link_to "People", people_path, class: "text-gray-500 hover:text-gray-700" %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <%= link_to "Stakeholders", stakeholders_path, class: "ml-4 text-gray-500 hover:text-gray-700" %>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
            </svg>
            <span class="ml-4 text-gray-700 font-medium"><%= @stakeholder.name %></span>
          </div>
        </li>
      </ol>
    </nav>
  </div>

  <!-- Header with actions -->
  <div class="flex items-center justify-between mb-8">
    <div class="flex items-center space-x-4">
      <div class="h-16 w-16 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
        <%= @stakeholder.name.split.map(&:first).join.upcase %>
      </div>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @stakeholder.name %></h1>
        <p class="text-lg text-gray-600"><%= @stakeholder.stakeholder_type.humanize %></p>
      </div>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_stakeholder_path(@stakeholder), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <%= link_to "Archive", stakeholder_path(@stakeholder), 
            method: :delete,
            data: { confirm: "Are you sure you want to archive this stakeholder?" },
            class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Contact Information -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Contact Information</h3>
        </div>
        <div class="px-6 py-4">
          <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <% if @stakeholder.email.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= mail_to @stakeholder.email, @stakeholder.email, class: "text-blue-600 hover:text-blue-500" %>
                </dd>
              </div>
            <% end %>
            <% if @stakeholder.phone.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Phone</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @stakeholder.phone %></dd>
              </div>
            <% end %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @stakeholder.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= @stakeholder.status.humanize %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Engagement Strategy</dt>
              <dd class="mt-1 text-sm text-gray-900 font-medium"><%= @stakeholder.engagement_strategy %></dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Description and Notes -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Details</h3>
        </div>
        <div class="px-6 py-4 space-y-4">
          <% if @stakeholder.description.present? %>
            <div>
              <h4 class="text-sm font-medium text-gray-900 mb-2">Description</h4>
              <p class="text-sm text-gray-700"><%= simple_format(@stakeholder.description) %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Stakeholder Matrix -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Stakeholder Matrix</h3>
        </div>
        <div class="px-6 py-4 space-y-4">
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-900">Influence Level</span>
              <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium 
                <%= case @stakeholder.influence_level
                    when 'critical' then 'bg-red-100 text-red-800'
                    when 'high' then 'bg-orange-100 text-orange-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= @stakeholder.influence_level.humanize %>
              </span>
            </div>
          </div>
          
          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-900">Interest Level</span>
              <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium 
                <%= case @stakeholder.interest_level
                    when 'critical' then 'bg-red-100 text-red-800'
                    when 'high' then 'bg-orange-100 text-orange-800'
                    when 'medium' then 'bg-yellow-100 text-yellow-800'
                    else 'bg-gray-100 text-gray-800'
                    end %>">
                <%= @stakeholder.interest_level.humanize %>
              </span>
            </div>
          </div>

          <div>
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-900">Priority Score</span>
              <span class="text-sm font-bold text-gray-900"><%= @stakeholder.priority_score %>/100</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: <%= @stakeholder.priority_score %>%"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Quick Stats</h3>
        </div>
        <div class="px-6 py-4">
          <dl class="space-y-3">
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Created</dt>
              <dd class="text-sm text-gray-900"><%= @stakeholder.created_at.strftime("%b %d, %Y") %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Last Updated</dt>
              <dd class="text-sm text-gray-900"><%= @stakeholder.updated_at.strftime("%b %d, %Y") %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500">Matrix Position</dt>
              <dd class="text-sm text-gray-900"><%= @stakeholder.stakeholder_matrix_position %></dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
