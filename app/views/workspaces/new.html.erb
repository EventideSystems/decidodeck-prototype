<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center">
        <%= link_to workspaces_path, class: "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 mr-4" do %>
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Create New Workspace</h1>
          <p class="text-gray-600 dark:text-gray-400 mt-1">Set up a new workspace to organize your work</p>
        </div>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Workspace Details</h2>
      
      <%= render 'form', workspace: @workspace %>
    </div>
    
    <!-- Help Section -->
    <div class="mt-8 bg-blue-50 dark:bg-blue-900/30 rounded-lg p-6 border border-blue-200 dark:border-blue-800">
      <h3 class="text-lg font-medium text-blue-900 dark:text-blue-100 mb-4">
        <svg class="h-5 w-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Workspace Types
      </h3>
      <dl class="space-y-3 text-sm">
        <div>
          <dt class="font-medium text-blue-800 dark:text-blue-200">Project</dt>
          <dd class="text-blue-700 dark:text-blue-300">A specific initiative with defined goals and timeline</dd>
        </div>
        <div>
          <dt class="font-medium text-blue-800 dark:text-blue-200">Program</dt>
          <dd class="text-blue-700 dark:text-blue-300">A collection of related projects working toward a common goal</dd>
        </div>
        <div>
          <dt class="font-medium text-blue-800 dark:text-blue-200">Department</dt>
          <dd class="text-blue-700 dark:text-blue-300">An organizational unit or functional area</dd>
        </div>
        <div>
          <dt class="font-medium text-blue-800 dark:text-blue-200">Initiative</dt>
          <dd class="text-blue-700 dark:text-blue-300">A strategic effort to achieve organizational objectives</dd>
        </div>
        <div>
          <dt class="font-medium text-blue-800 dark:text-blue-200">Template</dt>
          <dd class="text-blue-700 dark:text-blue-300">A reusable workspace structure for similar projects</dd>
        </div>
      </dl>
    </div>
  </div>
</div>
